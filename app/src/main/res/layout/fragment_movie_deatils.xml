<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>
    <variable
        name="movieDetail"
        type="com.example.movieapp_yassir_task.ui.screens.detailScreen.MovieDeatilsFragment"/>
    </data>

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".ui.screens.detailScreen.MovieDeatilsFragment">

        <ImageView
            android:id="@+id/imageMovieDetails"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            tools:srcCompat="@tools:sample/avatars" />

        <TextView
            android:id="@+id/tv_titleDetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginStart="8dp"
            android:text="title"
            android:textStyle="bold"
            android:textSize="32dp"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/tv_year"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="2022"
            android:textSize="24dp"
            android:textColor="@color/gray"/>

        <TextView
            android:id="@+id/tv_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="ethetgetgdhet"
            android:layout_marginTop="24dp"
            android:textSize="24dp"
            android:textColor="@color/gray"/>
    </LinearLayout>
</layout>